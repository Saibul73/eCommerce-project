<section style="background-color: rgb(255, 255, 255); margin-top:80px">
  

    <div class="row">
      <div class="col-lg-4 mt-5">
        <div class="card mb-4 pb-4">
          <div class="card-body text-center">
            <img src="https://avatoon.me/wp-content/uploads/2021/09/Cartoon-Pic-Ideas-for-DP-Profile-10.png" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-2">{{user.first_name}}</h5>

          </div>
          <div class="text-center">
            
            {{!-- add address button --}}
            <div class="pb-2">
              <a href="/addAddress">
                <button type="button" class="btn btn-dark">Add Address</button>
              </a>
            </div>
            
            {{!-- edit Username --}}
            <div class="align-center mb-2">
              <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#Name"
                data-bs-whatever="@name">Edit Username</button>
            </div>
            {{!-- password button --}}
            <div>
              <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#password"
                data-bs-whatever="@pass">Change Password</button>
            </div>
            {{!-- my orders button --}}
            <div class="pt-2">
              <a href="/myOrders">
                <button type="button" class="btn btn-dark">My Orders</button>
              </a>
            </div>
          </div>
        </div>

      </div>
      <div class="col-lg-8 mt-5">
        <div class="card mb-4">
          {{!-- //each --}}

          <div class="card-body">


            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.first_name}} {{user.last_name}}</p>
              </div>

            </div>

            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.email}}</p>
              </div>
            </div>
            <hr>


            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Mobile</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.phone_number}}</p>
              </div>
            </div>

          </div>

        </div>
        {{!-- here right side ullil --}}
        <h4 class="text-primary"> Manage Addresses</h4>
        <div class="accordion accordion-flush" id="accordionFlushExample">
          {{#each addressData}}
          <div class="accordion-item mb-2">

            <h2 class="accordion-header" id="{{this._id}}">

              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#flush-collapse{{this._id}}" aria-expanded="false" aria-controls="flush-collapseOne">
                {{inc @index}}.<span class="font-weight-bold">{{this.first_name}} {{this.last_name}}</span>, ph:<span
                  class="font-weight-bold">{{this.phoneNumber}}</span>
              </button>
            </h2>

            <div id="flush-collapse{{this._id}}" class="accordion-collapse collapse" aria-labelledby="{{this._id}}"
              data-bs-parent="#accordionFlushExample">
              <div class="accordion-body">
                {{!-- addressdisplay form --}}
                <form method="post" action="/editAddress/{{this._id}}">
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="inputAddress2">First Name</label>
                      <input type="text" name="firstName" class="form-control" id="inputAddress2" value="{{this.first_name}}">
                    </div>
                    <div class="form-group col-md-6">
                      <label for="inputAddress2">Last Name</label>
                      <input type="text" name="lastName" class="form-control" id="inputAddress2" value="{{this.last_name}}">
                    </div>
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputEmail4">Email</label>
                    <input type="email" name="email" class="form-control" id="inputEmail4" value="{{this.email}}">
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputEmail4">Phone number</label>
                    <input type="number" name="phoneNumber" class="form-control" id="inputEmail4" value="{{this.phoneNumber}}">
                  </div>
                  <div class="form-group">
                    <label for="inputAddress2">Address</label>
                    <input type="text" name="address" class="form-control" id="inputAddress2" value="{{this.address}}">
                  </div>
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="inputCity">City</label>
                      <input type="text" name="city" class="form-control" id="inputCity" value="{{this.city}}">
                    </div>
                    <div class="form-group col-md-4">
                      <label for="inputState">State</label>
                      {{!-- <select id="inputState" class="form-control">
                        <option selected>Choose...</option>
                        <option value="Kerala">kerala</option>
                      </select> --}}
                      <input type="text" name="state" class="form-control" id="inputState" value="{{this.state}}">
                    </div>
                    <div class="form-group col-md-2">
                      <label for="inputZip">Zip</label>
                      <input type="text" name="pincode" class="form-control" id="inputZip" value="{{this.pincode}}">
                    </div>
                    <div class="form-group col-md-6">
                      <label for="inputCity">Landmark</label>
                      <input type="text" name="landmark" class="form-control" id="inputCity" value="{{this.landmark}}">
                    </div>
                  </div>
                  
                  <button type="submit" class="btn btn-dark">Submit Edit</button>
                  <button type="button" onclick="deleteAddress('{{this._id}}')"  class="btn btn-danger">Delete Address</button> 
                  </form>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>

  </div>

  <div class="modal mt-5 fade" id="Name" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Update Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form>
            <div class="mb-3">
              <label for="recipient-name" class="col-form-label">Name:</label>
              <input id="name" type="text" class="form-control" id="recipient-name">
            </div>


        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" onclick="changeUsername({{this.id}})" class="btn btn-primary">Update</button>
        </div>
        </form>
      </div>
    </div>
  </div>

  {{!-- changePassword --}}
  <div class="modal mt-5 fade" id="password" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Update Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form>
            <div class="mb-3">
              <label for="recipient-name" class="col-form-label">Old Password:</label>
              <input id="oldpass" type="password" class="form-control">
            </div>
            <div class="mb-3">
              <label for="recipient-name" class="col-form-label">New Password:</label>
              <input id="newpass" type="password" class="form-control">
            </div>
            <div class="mb-3">
              <label for="recipient-name" class="col-form-label">Confirm Password:</label>
              <input id="confirmpass" type="password" class="form-control">
            </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" onclick="changePassword({{this.id}})" class="btn btn-primary">Update</button>
        </div>
        </form>
      </div>
    </div>
  </div>




</section>


