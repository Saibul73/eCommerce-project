
<div class="col-12">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Responsive Table</h6>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">No</th>
                                            <th scope="col">First Name</th>
                                            <th scope="col">Last Name</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Phone Number</th>
                                            <th scope="col">Block/Unblock User</th>
                                            <th scope="col">Status</th>
                                        </tr>
                                    </thead> 

                                    <tbody>
                                     {{#each userdetails}}
                                        <tr>
                                            <th scope="row">{{inc @index}}</th>
                                            <td>{{this.first_name}}</td>
                                            <td>{{this.last_name}}</td>
                                            <td>{{this.email}}</td>
                                            <td>{{this.phone_number}}</td>
                                            <td>
                                                <button class="btn btn-dark"><a href="/admin/block/{{this._id}}">Block</a></button>
                                               <button class="btn btn-dark"><a href="/admin/unblock/{{this._id}}">Unblock</a></button>
                                               </td>
                                            
                                            {{#if this.block}}
                                          
                                            <td><button class="btn btn-primary">blocked</button></td>
                                            {{else}}
                                              <td><button class="btn btn-success">active</button></td>
                                            {{/if}}
                                        </tr>
                                   {{/each}}
                                 </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Table End -->